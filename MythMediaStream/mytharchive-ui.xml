        <buttonlist name="category_selector" from="selector_base">
            <position>420,175</position>
        </buttonlist>

        <buttonlist name="recordinglist" from="buttonlist_dialog_wide_check_permanent">
            <area>250,210,510,260</area>
            <buttonarea>0,0,510,240</buttonarea>
            <statetype name="upscrollarrow">
                <position>10,244</position>	
            </statetype>
            <statetype name="downscrollarrow">
                <position>30,244</position>	
            </statetype>
        </buttonlist>

        <textarea name="progtitle" from="textarea_base">
            <area>250,505,510,40</area>
            <font>title</font>
            <multiline>yes</multiline>
            <cutdown>yes</cutdown>
            <case>upper</case>
            <align>left,top</align>
        </textarea>

        <textarea name="progdescription" from="textarea_base">
            <area>250,545,510,120</area>
            <font>small</font>
            <case>normal</case>
            <align>justify</align>
            <multiline>yes</multiline>
            <cutdown>yes</cutdown>
        </textarea>

        <textarea name="filesizelbl" from="textarea_base">
            <area>250,665,510,25</area>
            <font>title_verysmall_blue</font>
            <align>left,vcenter</align>
            <value>Filesize</value>
        </textarea>

        <textarea name="filesize" from="textarea_base">
            <area>350,665,150,25</area>
            <font>small</font>
            <case>normal</case>
            <align>left,vcenter</align>
        </textarea>

        <textarea name="progdatetimelbl" from="filesizelbl">
            <position>250,690</position>
            <value>Date (time)</value>
        </textarea>

        <textarea name="progdatetime" from="filesize">
            <position>350,690</position>
        </textarea>

        <imagetype name="cutlist_icon_off">
            <area>730,680,30,30</area>
            <preserveaspect>no</preserveaspect>
            <filename>images/shared/OSDVideoNF.png</filename>
        </imagetype>

        <imagetype name="cutlist_image">
            <area>730,680,30,30</area>
            <preserveaspect>no</preserveaspect>
            <filename>images/shared/OSDVideoFO.png</filename>
        </imagetype>

        <imagetype name="preview_image">
            <area>1000,425,200,170</area>
            <filename>blank.png</filename>
        </imagetype>

        <button name="cancel_button" from="button_base_menu">
            <position>790,175</position>
            <value>Cancel</value>
        </button>

        <button name="ok_button" from="button_base_menu">
            <position>790,210</position>
            <value>OK</value>
        </button>

    </window>

